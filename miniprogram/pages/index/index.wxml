<!--miniprogram/pages/index/index.wxml-->
<view class="header">
  <text class="title">Math Knockout Prelims 2021</text>
  <open-data type="userAvatarUrl" class="pfp"></open-data>
</view>

<view class="body">
  <view class="section">
    <text class="label">今日游戏</text>
    <image src="../../images/0.jpg" mode="widthFix" class="today"/>
  </view>
  <view class="section">
    <text class="label">暂不开放</text>
    <view class="cardsWrapper">
      <view class="disabledCard" wx:for="{{unavailable}}" wx:for-item="subj">
        <image src="images/{{subj}}.png" class="icon" mode="widthFix"/>
        <text class="subjectLabel">{{subj}}</text>
      </view>
    </view>
  </view>
  <view class="section">
    <text class="label">规则</text>
    <text class="label">反馈</text>
  </view>
</view>
