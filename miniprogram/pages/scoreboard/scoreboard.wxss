/* miniprogram/pages/scoreboard.wxss */

page {
  background: linear-gradient(#f7edcc 0%, #fffaf4 50%); /* 骚粉色可还行 */
}

.userinfoBox{
  margin: 30px 50px 0px 0px;
  width: calc(100% - 60px);
  height: 120px;
  margin-bottom: 30px;
  position:relative;
  display:flex;
}

.userinfoBox .userStats {
  position: absolute;
  right: 0;
  width: 35%;
  height: 100%;
 }

.pfp {
  width: 120px;
  height: 0;
  border-radius: 50%;
  box-shadow: 0 0 5px 0 rgba(0, 0, 0, 0.2);
  overflow: hidden;
  display: block;
}

.nick {
  height: auto;
  width: 120px;
  text-align: center;
  font-size:10pt;
  padding:5px;
  display:block;
}

.userScores{
  width: 60%;
  height: 40%;
  align-self:center;
  justify-content: center;
}

.score{
  text-align: center;
  font-size: 15px;
  display: block;
  line-height:1.5em;
}

.recordContainer {
  position: relative;
  top: 10px;
  padding-top: 10px;
  width:100%;
  height: calc(100vh - 200px); /*90px should be determined based on the UI for scoreboard  */
  z-index: 0; /* z-index高 在overlapp的时候会出现在前面*/
  position: relative;
  box-shadow: 0 0 8px 2px rgba(0, 0, 0, 0.16);
  border-radius: 30px 30px 0 0;
  background: white;
}

.tabBar{
  height:30px;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.tabBar .tab1Container{
  width: 50%;
  height:auto;
  display: flex;
  justify-content: center;
}

.tabBar .tab2Container{
  width: 50%;
  height:auto;
  display: flex;
  justify-content: center;
}

 .tabLabel1-false{
  width: 30%;
  height: auto;
  padding:5px 0px 0px 0px;
  text-align: center;
  color:rgb(61, 182, 5);
  border-bottom: 1.5px solid rgb(61, 182, 5);
}


 .tabLabel1-true{
  width:30%;
  height: auto;
  padding:5px 0px 0px 0px;
  text-align: center;
}

 .tabLabel2-false{
  width:30%;
  height: auto;
  padding:5px 0px 0px 0px;
  text-align: center;
}

.tabLabel2-true{
  width:30%;
  height: auto;
  padding:5px 0px 0px 0px;
  text-align: center;
  color:rgb(61, 182, 5);
  border-bottom: 1.5px solid rgb(61, 182, 5);
}

.scrollEnd {
  margin-top: 10px;
  font-size: 9pt;
  width: 100%;
  color: #bbb;
  text-align: center;
}

.rankLabel{
  border:grey solid;
  width:20%;
}

.containerLabel {
  position: relative;
  top: 5px;
  padding: 0 0 10px 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.scroll {
  height: calc(100% - 75px); 
  position: absolute; 
  top: 75px; 
  left: 0px;
  align-content: center;
}

.scrollItem {
  position: relative;
  margin: auto;
  padding: 10px 0px;
  width: calc(100% - 40px);
  border-bottom: 1px #e8e8e8 solid;
}

.itemText1{
  width:100%;
  font-size:9pt;
  display: block;
}

.rankingInfo{
  width: 100%;
  margin-top:5px;
  align-items: center;
  display:flex;
  flex-direction: row;
}

.pfprank{
  width:25px;
  height:25px;
  border-radius: 50%;
}

.username {
  margin-left: 5px;
  font-size: 10.5pt;
  align-items: center;
}

.userScore{
  font-size: 11pt;
  margin-left:auto;
}