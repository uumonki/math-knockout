/* miniprogram/pages/questions/24points/24points.wxss */

page {
  background: rgb(222,237,255);
  background: linear-gradient(180deg, rgba(222,237,255,1) 0%, rgba(190,225,255,1) 100%);
}

.title {
  font-weight: 600;
  font-size: 25pt;
  transform: translate(0, -3px);
  margin-right: 15px;
}

.header {
  background: #f8f8f8;
  box-shadow: 0px 0px 8px 1px rgba(0,0,0,0.1);
  border-top: 1px solid #eeeeee;
  padding: 15px 23px;
  position: relative;
}

.title, .info {
  display: inline-block;
  vertical-align: center;
}


.timer, .score {
  width: 100%;
  display: block;
}

.numberChoice {
  display: inline-block;
  background-color: white;
  width: calc(25% - 10px) !important;
  max-width: calc(25% - 10px);
  margin-left: 10px !important;
  border-radius: 7px;
}

.true {
  box-shadow: 0px 1.5px 0px 0px #00000000;
}

.operationChoice {
  display: inline-block;
  width: calc(100% / 6 - 10px) !important;
  background-color: white;
  margin-left: 10px !important;
  border-radius: 7px;
}

.cardContainer {
  width: 56%;
  margin: 0px auto;
}

.cards {
  display: inline-block;
  position: relative;
  width: calc(50% - 12px);
  height: 240rpx;
  text-align: center;
  border-radius: 10px;
  margin: 3.5px 6px;
  box-shadow: 0px 0px 5px 1px rgba(0,0,0,0.2);
  background-color: white;
}

.cardText {
  position: absolute;
  top: 2px;
  left: 9px;
  font-size: 55rpx;
}

.symbol {
  position: absolute;
  height: 100rpx;
  width: 100rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.expression {
  display: block;
  width: 100%;
  text-align: center;
  margin-top: 5px;
}

.error {
  animation: shake 0.12s ease-in-out 0s 2;
}

@keyframes shake {
  0% {margin-left: 0px;}
  25% {margin-left: 5px;}
  50% {margin-left: -5px;}
  100% {margin-left: 0px;}
}

.inlineButton {
  display: inline-block;
  width: calc(100% - 50px) !important;
  background-color: rgb(47,133,252);
  color: white;
  margin-left: 50px !important;
  border-radius: 20px;
}

.clearButton {
  display: inline-block;
  position: absolute;
  width: 40px !important;
  height: 40px !important;
  background-color: white;
  border-radius: 20px;
}

.delete {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  height: 20px;
  width: 20px;
}

.buttonWrapper {
  display: block;
  margin: 0px auto;
  width: calc(100% - 40px);
  max-width: 500px;
}

.controls {
  width: 100%;
  position: absolute;
  bottom: 0px;
  left: 50%;
  padding-bottom: 5vh;
  padding-top: 18px;
  transform: translate(-50%, 0);
  background-color: rgb(245, 245, 245);
  border-radius: 20px 20px 0px 0px;
}

button:not(.inlineButton) {
  font-weight: normal !important;
}

.cardsWrapper {
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
  z-index: 999;
}

.skip {
  position: absolute;
  right: 20px;
  top: 50%;
  transform: translate(0, -50%);
  height: 40px !important;
  width: 40px !important;
  border-radius: 20px;
  background: white;
  box-shadow: 0px 0px 4px 1px rgba(0,0,0,0.05);
}

.skipImg {
  height: 20px;
  width: 20px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
