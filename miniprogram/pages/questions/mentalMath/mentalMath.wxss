page {
  background: rgb(222,237,255);
  background: linear-gradient(180deg, rgba(222,237,255,1) 0%, rgba(190,225,255,1) 100%);
}

.title {
  font-weight: 600;
  font-size: 25pt;
  background: #f8f8f8;
  box-shadow: 0px 0px 8px 1px rgba(0,0,0,0.1);
  border-top: 1px solid #eeeeee
}

.title, .info {
  position: absolute;
  top: 0px;
  left: 0px;
  width: calc(100% - 46px);
  padding: 20px 23px;
}

.info {
  text-align: right;
  padding-top: 23px;
}

.timer, .score {
  width: 100%;
  display: block;
  height: 22px !important;
}

.label {
  position: absolute;
  top: 23px;
  right: 63px;
}

.label1 {
  position: absolute;
  top: 45px;
  right: 42px;
}