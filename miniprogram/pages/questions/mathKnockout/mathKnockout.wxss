/* miniprogram/pages/questions/mathKnockout/mathKnockout.wxss */

page {
  background: rgb(222,237,255);
  background: linear-gradient(180deg, rgba(222,237,255,1) 0%, rgba(190,225,255,1) 100%);
}

.header {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
}

.title {
  background: #f8f8f8;
  box-shadow: 0px 0px 8px 1px rgba(0,0,0,0.1);
  border-top: 1px solid #eeeeee
}

.bold {
  font-weight: 600;
  font-size: 25pt;
}

.title, .info {
  position: absolute;
  top: 0px;
  left: 0px;
  width: calc(100% - 46px);
  padding: 20px 23px;
}

.info {
  text-align: right;
  right: 20px;
  top: 50%;
  transform: translate(0, -50%);
}

.timer {
  width: 100%;
  display: block;
  height: 22px !important;
  position: relative;
}

.label {
  position: absolute;
  top: 0px;
  right: 40px;
}
