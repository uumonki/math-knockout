page {
  background: #fafafa;
}

.section {
  margin: 180rpx 100rpx;
  width: calc(100vw - 200rpx);
  height: calc(100vh - 360rpx)
}

.tui-table-view{
  display: -webkit-flex;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 100%;
  height: 100%;
}

.tui-col-3{
  flex: 0 0 auto;
  width: calc(50% - 20px);
  text-align: center;
  padding: calc(((100vh - 360rpx) / 3 - 15pt) / 2 - 10px) 0;
  margin: 10px;
  border-radius: 10px;
  box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.1);
  background: white
}

.buttonText {
  line-height: 15pt;
  height: 15pt;
}