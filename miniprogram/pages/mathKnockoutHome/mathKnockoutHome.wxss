page {
  background: linear-gradient(#3a424b, #595d5f);
}

.background {
  width: 100vh;
  height: 100vh;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
  opacity: 0.1;
}

.section {
  margin: 150rpx 20px;
  width: calc(100vw - 40px);
  height: calc(100vh - 300rpx);
  z-index: 5;
}

.tui-table-view{
  display: -webkit-flex;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 100%;
  height: 100%;
}

.tui-col-3 {
  position: relative;
  flex: 0 0 auto;
  width: calc(50% - 16px);
  text-align: center;
  padding: calc(((100vh - 300rpx) / 3 - 15pt) / 2 - 8px) 0;
  margin: 8px;
  border-radius: 10px;
  box-shadow: 0px 0px 6px 1px rgba(0,0,0,0.15);
  z-index: 1;
}


.color-true{
  background: rgba(247, 239, 239, 0.85);
  z-index: 5;
}

.color-false{
  background: rgb(0, 0, 0, 0.3);
  z-index: 5;
}

.color-poop {
  background: rgba(255, 223, 82, 0.836);
  z-index: 5;
}



.buttonText {
  line-height: 15pt;
  height: 15pt;
  font-size: 12pt;
}

.lockImage{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  height:50%;
  z-index: 999;
  opacity: 0.4;
}